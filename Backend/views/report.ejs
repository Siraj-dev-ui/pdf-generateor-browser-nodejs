<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Document</title>
  </head>

  <title>Simple Invoice</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    
    table {
      width: 100%;
      border-collapse: collapse;
    }
    
    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    
    th {
      background-color: #f2f2f2;
    }
    
    .invoice-header {
      background-color: #4CAF50;
      color: white;
      padding: 20px;
      text-align: center;
      font-size: 24px;
    }
    
    .invoice-details {
      margin-top: 20px;
    }
    
    .invoice-details p {
      margin: 0;
    }
    
    .invoice-details .label {
      font-weight: bold;
    }
    
    .invoice-table {
      margin-top: 20px;
    }
    
    .total {
      text-align: right;
    }
    
    .total .label {
      font-weight: bold;
    }
    
    .total .value {
      font-weight: bold;
      color: #4CAF50;
    }
  </style>
</head>
<body>
  <div class="invoice-header">
    <h1>Simple Invoice</h1>
  </div>
  
  <div class="invoice-details">
    <p><span class="label">Invoice Number:</span> INV001</p>
    <p><span class="label">Invoice Date:</span> May 26, 2023</p>
    <p><span class="label">Customer:</span> John Doe</p>
  </div>
  
  <div class="invoice-table">
    <table>
      <thead>
        <tr>
          <th>Item</th>
          <th>Description</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Item 1</td>
          <td>Description 1</td>
          <td>2</td>
          <td>$10</td>
          <td>$20</td>
        </tr>
        <tr>
          <td>Item 2</td>
          <td>Description 2</td>
          <td>1</td>
          <td>$15</td>
          <td>$15</td>
        </tr>
        <tr>
          <td>Item 3</td>
          <td>Description 3</td>
          <td>3</td>
          <td>$5</td>
          <td>$15</td>
        </tr>
    
      </tbody>
      <tfoot>
        <tr class="total">
          <td colspan="4" class="label">Total:</td>
          <td class="value">$50</td>
        </tr>
      </tfoot>
    </table>
    <div class="invoice-details">
    <p><span class="label">Status:</span> <button>Unpaid</button></p>
  </div>
  </div>
</body>
</html>
